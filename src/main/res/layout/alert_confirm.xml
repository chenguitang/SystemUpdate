<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_update_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#222333"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="更新包属性"
        android:textColor="@color/light_white"
        android:textSize="22sp" />


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#5588CC"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="下载"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/btn_ok"
        android:layout_toStartOf="@id/btn_ok"
        android:background="#5588CC"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="取消"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/btn_ok"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorDialogLine" />

    <!--当前系统版本-->
    <TextView
        android:id="@+id/tv_current_version_tip"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_update_dialog_title"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="系统当前版本："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_current_version"
        android:layout_width="match_parent"
        android:gravity="center_vertical|start"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_update_dialog_title"
        android:layout_toEndOf="@id/tv_current_version_tip"
        android:layout_toRightOf="@id/tv_current_version_tip"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_current_version_tip"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorDialogLine" />

    <!--==============================================-->
    <TextView
        android:id="@+id/tv_update_version_tip"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_current_version_tip"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="更新版本："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_update_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|start"
        android:layout_below="@+id/tv_current_version_tip"
        android:layout_toEndOf="@id/tv_update_version_tip"
        android:layout_toRightOf="@id/tv_update_version_tip"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_update_version_tip"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorDialogLine" />

    <!--==============================================-->
    <TextView
        android:id="@+id/tv_upload_time_tip"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_update_version_tip"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="上传时间："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_upload_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_update_version_tip"
        android:gravity="center_vertical|start"
        android:layout_toEndOf="@id/tv_upload_time_tip"
        android:layout_toRightOf="@id/tv_upload_time_tip"
        android:textSize="16sp" />

    <View
        android:id="@+id/view_line_upload_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_upload_time_tip"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorDialogLine" />

    <!--==============================================-->
    <TextView
        android:id="@+id/tv_update_message_tip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_line_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_line_upload_bottom"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="更新内容："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_update_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_line_bottom"
        android:gravity="center_vertical|start"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/view_line_upload_bottom"
        android:layout_toEndOf="@id/tv_upload_time_tip"
        android:layout_toRightOf="@id/tv_upload_time_tip"
        android:textSize="16sp" />

</RelativeLayout>
